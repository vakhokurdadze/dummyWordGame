        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold|italic"
        />

</androidx.constraintlayout.widget.ConstraintLayout>